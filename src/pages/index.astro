---
import Layout from '../layouts/Layout.astro';
---

<Layout>
  <!-- HERO SECTION -->
  <section class="hero">
    <div class="container">
      <h1>GenesisCoin</h1>
      <p>Twój klucz do przyszłości – hodluj i zarabiaj</p>
      <div class="buttons">
        <a href="#" class="btn-primary">JOIN PRESALE</a>
        <a href="#" class="btn-secondary">WHITE PAPER</a>
      </div>
    </div>
  </section>

  <!-- ROADMAP -->
  <section class="roadmap">
    <div class="container">
      <h2>ROADMAP 2024/2025</h2>
      <ul>
        <li>✅ Start GenesisCoin</li>
        <li>🔜 Presale Launch</li>
        <li>🔜 Listing on PancakeSwap</li>
        <li>🔜 Staking & Rewards</li>
        <li>🔜 CEX Listing & Expansion</li>
        <li>🔜 Community Partnerships</li>
      </ul>
    </div>
  </section>

  <!-- ZESPÓŁ -->
  <section class="team">
    <div class="container">
      <h2>Meet the Team</h2>
      <div class="team-grid">
        <div class="team-member">
          <img src="/images/squno.png" alt="SQUNO">
          <h3>SQUNO</h3>
          <p>Founder & Lead Developer</p>
        </div>
        <div class="team-member">
          <img src="/images/korki.png" alt="Korki">
          <h3>Korki</h3>
          <p>Smart Contract & Tech Support</p>
        </div>
        <div class="team-member">
          <img src="/images/ghostdev.png" alt="Ghost Dev">
          <h3>Ghost Dev</h3>
          <p>Blockchain Security & Audits</p>
        </div>
        <div class="team-member">
          <img src="/images/shadowmarketer.png" alt="Shadow Marketer">
          <h3>Shadow Marketer</h3>
          <p>Growth & Community</p>
        </div>
      </div>
    </div>
  </section>

  <!-- PARTNERZY -->
  <section class="partners">
    <div class="container">
      <h2>Our Partners</h2>
      <p>Coming Soon...</p>
    </div>
  </section>
</Layout>
